<p style="color: green"><%= notice %></p>

<h1 style="text-align: center;">Posts</h1>
<table class="table" style="text-align: center;" border="0.1">
  <thead>
    <tr>
      <th scope="col">Number</th>
      <th scope="col" width="200">Title</th>
      <th scope="col" width="700">Content</th>
      <th scope="col">Detail</th>      
    </tr>
  </thead>
  <tbody>    
      <% @posts.each do |post| %>
      <tr>        
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to "Show this post", post %></td>
      </tr>     
     
        
     
      <% end %>
  </tbody>
</table>



<%= link_to "New post", new_post_path %>
